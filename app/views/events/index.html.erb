<div class="page-header">
  <center><h1>
    Events</h1>
    <p></p>
    <p><a href="/events/new" class="btn btn-sm btn-success">Create New Event</a> or <a href="/charges/new" class="btn btn-sm btn-success">Charge Someone</a></p>
  </center>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <tr>
        <td></td>
        <td></td>
        <td><center><small>Remove / <br>Mark Paid</br></small></center></td>
      </tr>
      <% @events.each do |event| %>
      <tr>
        <td><a href="/events/<%= event.id %>"><%= event.event_name %></a></td>
        <td>
          <center><a href="/events/<%= event.id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></center>
        </td>
        <td>
          <center><a href="/delete_event/<%= event.id %>" rel="nofollow"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></center>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
